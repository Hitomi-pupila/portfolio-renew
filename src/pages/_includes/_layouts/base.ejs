<!DOCTYPE html>
<html lang="<%= language -%>">
<%
/*
  frontmatterで定義されたデータからlink要素を生成
  @param  {array} links link要素として反映したいデータ
  @return {string} データから生成したlink要素
*/
getMetaLink = (links) => {
  if(!links) return;

  let items = '';

  links.forEach((item)=> {
    items += `<link ${item}>\n`
  })

  return items;
}

/*
  frontmatterで定義されたデータからscript要素を生成
  @param  {array} scripts script要素として反映したいデータ
  @return {string} データから生成したscript要素
*/
getMetaScript = (scripts) => {
  if(!scripts) return;

  let items = '';

  scripts.forEach((item)=> {
    items += `<script ${item}></script>\n`
  })

  return items;
}
-%>
<head prefix="og: https://ogp.me/ns#">
<meta charset="utf-8">
<meta name="robots" content="noindex">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="format-detection" content="telephone=no">
<meta name="description" content="<%= description -%>">

<title><%= title -%></title>

<%- getMetaLink(headLink) -%>

<%- getMetaScript(headScript) -%>

</head>




<body>
<div class="l-wrap">

<%- include('/header') -%>



<% if (breadcrumbs.length > 0) { -%>
<%- include('/body-breadcrumbs') -%>




<% } -%>
<%- content -%>




<%- include('/footer') -%>
</div><!-- /.l-wrap -->


<%- include('/body-svg') -%>

</body>
</html>
